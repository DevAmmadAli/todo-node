    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch with Nodemon",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/src/index.ts",
            "restart": true,
            "console": "integratedTerminal",
            "env": { "PORT": "8000" },
            "envFile": "${workspaceFolder}/.env"
            // "runtimeArgs": ["--inspect"]
        }
    ]
}
